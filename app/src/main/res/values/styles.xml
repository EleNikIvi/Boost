<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="colorPrimaryDark">@color/launcherColor</item>
        <item name="android:windowBackground">@color/launcherColor</item>
    </style>

    <style name="AppTheme.Paper">
        <item name="colorPrimary">@color/paperActiveColor</item>
        <item name="colorPrimaryVariant">@color/paperInactiveColor</item>
        <item name="colorOnPrimary">@color/paperBackgroundColor</item>

        <item name="colorPrimaryDark">@color/paperInactiveColor</item>

        <item name="colorSecondary">@color/paperActiveColor</item>
        <item name="colorSecondaryVariant">@color/paperActiveColor</item>
        <item name="colorOnSecondary">@color/paperBackgroundColor</item>

        <item name="colorActive">@color/paperActiveColor</item>
        <item name="colorOnActive">@color/paperBackgroundColor</item>
        <item name="colorInactive">@color/paperInactiveColor</item>
        <item name="colorInactiveLight">@color/paperInactiveLightColor</item>
        <item name="colorBackground">@color/paperBackgroundColor</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">?colorBackground</item>
        <item name="android:textColorPrimary">?colorActive</item>
        <item name="android:textColorSecondary">?colorActive</item>
        <item name="android:tint">?colorActive</item>
    </style>
</resources>
