<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="colorPrimaryDark">@color/launcherColor</item>
        <item name="android:windowBackground">@color/launcherColor</item>
    </style>

    <style name="AppTheme.Light">
        <item name="activeColor">@color/lightActiveColor</item>
        <item name="inactiveColor">@color/lightInactiveColor</item>
        <item name="backgroundColor">@color/lightBackgroundColor</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">?backgroundColor</item>
        <item name="android:textColorPrimary">?activeColor</item>
        <item name="android:textColorSecondary">?activeColor</item>
        <item name="android:tint">?activeColor</item>
    </style>
</resources>
