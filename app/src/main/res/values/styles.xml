<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="colorPrimaryDark">@color/launcherColor</item>
        <item name="android:windowBackground">@color/launcherColor</item>
    </style>

    <style name="AppTheme.Light">
        <item name="colorPrimary">@color/lightActiveColor</item>
        <item name="colorPrimaryVariant">@color/lightInactiveColor</item>
        <item name="colorOnPrimary">@color/lightBackgroundColor</item>

        <item name="colorPrimaryDark">@color/lightInactiveColor</item>

        <item name="colorSecondary">@color/lightActiveColor</item>
        <item name="colorSecondaryVariant">@color/lightActiveColor</item>
        <item name="colorOnSecondary">@color/lightBackgroundColor</item>

        <item name="colorActive">@color/lightActiveColor</item>
        <item name="colorOnActive">@color/lightBackgroundColor</item>
        <item name="colorInactive">@color/lightInactiveColor</item>
        <item name="colorBackground">@color/lightBackgroundColor</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">?colorBackground</item>
        <item name="android:textColorPrimary">?colorActive</item>
        <item name="android:textColorSecondary">?colorActive</item>
        <item name="android:tint">?colorActive</item>
    </style>
</resources>
